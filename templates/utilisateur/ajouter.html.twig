{% extends 'base.html.twig' %}

{% block body %}

    <div class="container">

        {{ form_start(formRegistration) }}

        <div>
            <h2 class="mt-5 mb-5 h2_utilisateur">Ajouter un utilisateur</h2>
        </div>

        <div class="row">
            <div class="col">
                {{ form_row(formRegistration.username, {'label': 'Nom d\'utilisateur', 'attr': {'placeholder': 'Nom d\'utilisateur'} }) }}
            </div>
            <div class="col">
                {{ form_row(formRegistration.nomUser, {'label': 'Nom', 'attr': {'placeholder': 'Nom'} }) }}
            </div>
            <div class="col">
                {{ form_row(formRegistration.prenomUser, {'label': 'Prénom', 'attr': {'placeholder': 'Prénom'} }) }}
            </div>
        </div>

        <div class="row">
            <div class="col">
                {{ form_row(formRegistration.email, {'label': 'Adresse email', 'attr': {'placeholder': 'Adresse email'} }) }}
            </div>
            <div class="col">
                {{ form_row(formRegistration.password, {'label': 'Mot de passe', 'attr': {'placeholder': 'Mot de passe'} }) }}
            </div>
            <div class="col">
                {{ form_row(formRegistration.confirm_password, {'label': 'Confirmation mot de passe', 'attr': {'placeholder': 'Confirmation mot de passe'} }) }}
            </div>
        </div>

        <div class="row">
            <div class="col">
                {{ form_row(formRegistration.roles, {'label': 'Rôle' }) }}
                {{ form_errors(formRegistration) }}
            </div>
        </div>

        <button type="submit" class="btn btn-success">
            Enregistrer
        </button>

        {{ form_end(formRegistration) }}

    </div>

{% endblock %}
{% block selectjs %}
    <script src="{{ asset('build/select.js') }}"></script>
 {% endblock %}