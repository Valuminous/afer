{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}

    <h1>Modification</h1>

    {{ form_start(formModificationUtilisateur) }}

    {{ form_row(formModificationUtilisateur.username, {'label': 'Nom d\'utilisateur', 'attr': {'placeholder': 'Nom d\'utilisateur'} }) }}
    {{ form_row(formModificationUtilisateur.nomUser, {'label': 'Nom', 'attr': {'placeholder': 'Nom'} }) }}
    {{ form_row(formModificationUtilisateur.prenomUser, {'label': 'Prénom', 'attr': {'placeholder': 'Prénom'} }) }}
    {{ form_row(formModificationUtilisateur.email, {'label': 'Adresse email', 'attr': {'placeholder': 'Adresse email'} }) }}
    {{ form_row(formModificationUtilisateur.roles, {'label': 'Rôle' }) }}

    <button type="submit" class="btn btn-primary btn-link text-white mb-5 mt-3">
        Valider
    </button>

    {{ form_end(formModificationUtilisateur) }}

{% endblock %}