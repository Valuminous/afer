{% extends 'base.html.twig' %}

{% block body %}

<section class="cas">
    <div class="d-flex justify-content-between align-items-end">
        <h2 class="ml-5 h2_stage mt-5 ">Liste des cas</h2>
        <a href="{{ path('cas_ajouter')}}" class="btn mb-2 mr-5 add_icon d-flex align-items-center">Ajouter</a>
    </div>
    {# <div class="text-right">
        <a data-toggle="tooltip" data-placement="top" title="Imprimer cette page" target="_blank"
            href="{{ path('cas_imprimer')}}" <i class="mr-5 fas fa-print print_icon"></i></a>
    </div> #}
    <table class="table table-striped">
        <thead>
            <tr class="background_stage">
                <th scope="col" class="pl-5 text-left">Numéro du Cas</th>
                <th scope="col" class="text-left">Intitulé</th>
                <th scope="col" class="text-left">Tarif</th>
                <th scope="col" class="text-center"><i class="fas fa-cogs"></i></th>
            </tr>
        </thead>
        <tbody>
            {% for cas in cas %}
            <tr>
                <td class="pl-5 text-left">{{ cas.numeroCas }}</td>
                <td class="text-left">
                    {{ cas.intituleCas }}
                    <p>
                </td>
                <td class="text-left">{{ cas.tarifs.montantTtc|localizedcurrency('EUR')}}</td>
                <td class="text-center">
                    {# <a data-toggle="tooltip" data-placement="top" title="Voir le cas"
                        href="{{  path('cas_afficher', {'id': cas.id}) }}"><i
                            class="far fa-eye eye_color"></i></a> #}
                    <a data-toggle="tooltip" data-placement="top" title="Modifier le cas"
                        href="{{  path('cas_modifier', {'id': cas.id}) }}"><i
                            class="fas fa-pen pen_color pl-2 pr-2"></i></a>
                    <a data-id="{{ cas.id }}" data-placement="top" data-target="#casDelete"
                        class="casDelete" title="Supprimer le cas"
                        {# href="{{  path('cas_suppr_alert') }}"><i class="far fa-trash-alt trash_color"></i></a> #}
                </td>
            </tr>
            <!-- Modal -->
            <div class="modal fade" id="casDelete" tabindex="-1" role="dialog"
                aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title">Attention !</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            Vous êtes sur le point de supprimer un cas.
                        </div>
                        <div class="modal-footer d-flex justify-content-center">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Annuler</button>
                            <a href="#" class="btn btn-danger">Confirmer</a>
                        </div>
                    </div>
                </div>
            </div>
            {% else %}
            <td class="pl-5 text-left">Il n'y a aucun cas</td>
            <td class="text-left">...</td>
            <td class="text-left">...</td>
            <td class="text-center">...</td>
            {% endfor %}
        </tbody>
    </table>
</section>
{% endblock %}
