{% extends 'base.html.twig' %}

{% block body %}

    {% if editMode %}
    <h1>Modifier un animateur</h1>
    {% else %}
    <h1>Ajouter un animateur</h1>
    {% endif %}

{{ form_start(formAnimateur) }}

<button type="submit" class="btn btn-primary">
    {% if editMode %}
    Modifier
    {% else %}
    Sauvegarder
    {% endif %}
</button>
<div class="d-flex">
        {{ form_row(formAnimateur.animateurFonction, {'label':"Fonction de l'animateur", 'attr': {'placeholder':
        "Fonction animateur"}}) }}
        <button type="button" id="addFonctionAnimateur" class="btn btn-primary" data-toggle="modal" data-target="#modalCart5">
            +
        </button>
    </div>
    <div class="d-flex">
        {{ form_row(formAnimateur.animateurStatut, {'label':"Statut de l'animateur", 'attr': {'placeholder': "Statut animateur"}}) }}
        <button type="button" id="addStatutAnimateur" class="btn btn-primary" data-toggle="modal" data-target="#modalCart6">
            +
        </button>
    </div>

{{ form_end(formAnimateur) }}

<!-- Modal: modalCart -->
<div class="modal fade" id="modalCart5" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <!--Header-->
                <div class="modal-header">
                    <h4 class="modal-title" id="myModalLabel">Ajouter une fonction</h4>
                    <button type="button" class="close5" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <!--Body-->
                <div class="modal-body"></div>
                <div class="text-danger" id="error5"></div>
            </div>
        </div>
    </div>
    <!-- Modal: modalCart -->
    
    
