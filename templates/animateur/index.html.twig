{% extends 'base.html.twig' %}

{% block body %}

<section class="animateur">
    <div class="d-flex justify-content-between align-items-center">
        <h2 class="ml-5 h2_animateur mt-5 mb-5">Liste des animateurs</h2>
        <a href="{{ path('animateur_ajouter')}}" class="btn mr-5 add_icon d-flex align-items-center">Ajouter</a>
    </div>
    <table class="table table-striped">
        <thead>
            <tr class="background_animateur">
                <th scope="col" class="pl-5 text-left">Nom</th>
                <th scope="col" class="text-left">Prénom</th>
                <th scope="col" class="text-left">Email</th>
                <th scope="col" class="text-left">N° de portable</th>
                <th scope="col" class="text-left">N° fixe</th>
                <th scope="col" class="text-center"><i class="fas fa-cogs"></i></th>
            </tr>
        </thead>
        <tbody>
            {% for animateur in animateurs %}
            <tr>
                <td class="pl-5 text-left">{{ animateur.nomAnimateur }}</td>
                <td class="text-left">{{ animateur.prenomAnimateur }}</td>
                <td class="text-left">{{ animateur.emailAnimateur }}</td>
                <td class="text-left">{{ animateur.numeroPortableAnimateur }}</td>
                <td class="text-left">{{ animateur.numeroFixeAnimateur }}</td>
                <td class="text-center">
                    <a data-toggle="tooltip" data-placement="top" title="Voir l'animateur" href="{{  path('animateur_afficher', {'id': animateur.id}) }}"><i
                            class="far fa-eye eye_color"></i></a>
                    <a data-toggle="tooltip" data-placement="top" title="Modifier l'animateur" href="{{  path('animateur_modifier', {'id': animateur.id}) }}"><i
                            class="fas fa-pen pen_color pl-2 pr-2"></i></a>
                    <a data-toggle="modal" data-target="#animateurDelete{{ animateur.id }}" data-placement="top" title="Supprimer l'animateur" href="#"><i
                            class="trash_color far fa-trash-alt"></i></a>

                </td>
            </tr>

            <!-- Modal -->
            <div class="modal fade" id="animateurDelete{{ animateur.id }}" tabindex="-1" role="dialog"
                aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title">Attention !</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            Vous êtes sur le point de supprimer un animateur
                        </div>
                        <div class="modal-footer d-flex justify-content-center">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Annuler</button>
                            <a href="{{  path('animateur_supprimer', {'id': animateur.id}) }}" class="btn btn-danger">Confirmer</a>
                        </div>
                    </div>
                </div>
            </div>
            {% else %}
            <td class="text-center">Il n'y a aucun animateur</td>
            <td class="text-center">...</td>
            <td class="text-center">...</td>
            <td class="text-center">...</td>
            <td class="text-center">...</td>

            {% endfor %}
        </tbody>
    </table>

</section>
{% endblock %}