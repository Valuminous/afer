{% extends 'base.html.twig' %}

{% block body %}

<section class="animateur">
    <a href="{{ path('animateur_ajouter')}}" class="btn btn-success mt-5 mb-5">Ajouter un animateur</a>
     <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col" class="text-center">Nom</th>
                <th scope="col" class="text-center">Prenom</th>
                <th scope="col" class="text-center">Email</th>
                <th scope="col" class="text-center">N°</th>
                <th scope="col" class="text-center">Options</th>
            </tr>
        </thead>
        <tbody>
            {% for animateur in animateurs %}
            <tr>
                <td class="text-center">{{ animateur.nomAnimateur }}</td>
                <td class="text-center">{{ animateur.prenomAnimateur }}</td>
                <td class="text-center">{{ animateur.emailAnimateur }}</td>
                <td class="text-center">
                    <p>N° fixe : {{ animateur.numeroFixeAnimateur }}</p>
                    <p>N° portable : {{ animateur.numeroPortableAnimateur }}</p>
                </td>
                <td class="text-center">
                    <a href="{{  path('animateur_afficher', {'id': animateur.id}) }}"><i class="far fa-eye"></i></a>
                    <a href="{{  path('animateur_modifier', {'id': animateur.id}) }}"><i class="fas fa-pen"></i></a>
                    <a href="{{  path('animateur_supprimer', {'id': animateur.id}) }}" ><i class="far fa-trash-alt"></i></a>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>

</section>
{% endblock %}