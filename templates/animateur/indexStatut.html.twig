{% extends 'base.html.twig' %}

{% block body %}

<section class="animateur">
    <div class="d-flex justify-content-between align-items-center">
        <h2 class="ml-5 h2_animateur mt-5 mb-5">Liste des statuts pour les animateurs</h2>
        <a href="{{ path('animateurStatut_ajouter')}}" class="btn mr-5 add_icon d-flex align-items-center">Ajouter</a>
    </div>
    <table class="table table-striped">
        <thead>
            <tr class="background_animateur">
                <th scope="col" class="pl-5 text-left">Nom du statut</th>
                <th scope="col" class="text-center"><i class="fas fa-cogs"></i></th>

            </tr>
        </thead>
        <tbody>
            {% for animateurstatut in animateurstatuts %}
            <tr>
                <td class="pl-5 text-left">{{ animateurstatut.nom }}</td>
                <td class="text-center">
                    <a data-toggle="tooltip" data-placement="top" title="Modifier le statut" href="{{  path('animateurStatut_modifier', {'id': animateurstatut.id}) }}"><i
                            class="fas fa-pen pen_color"></i></a>
                    <a data-id="{{ animateurstatut.id }}" data-target="#animateurStatutDelete" class="animateurStatutDelete" data-placement="top" title="Supprimer le statut" href="{{  path('animateur_statut_suppr_alert') }}"><i
                            class="trash_color far fa-trash-alt pl-2"></i></a>

                </td>
            </tr>

            <!-- Modal -->
            <div class="modal fade" id="animateurStatutDelete" tabindex="-1" role="dialog"
                aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title">Attention !</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            Vous Ãªtes sur le point de supprimer un statut
                        </div>
                        <div class="modal-footer d-flex justify-content-center">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Annuler</button>
                            <a href="#" class="btn btn-danger">Confirmer</a>
                        </div>
                    </div>
                </div>
            </div>
            {% else %}
            <td class="text-center">Il n'y a aucun statut</td>
            <td class="text-center">...</td>
            {% endfor %}
        </tbody>
    </table>

</section>
{% endblock %}