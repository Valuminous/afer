{% extends 'base.html.twig' %}

{% block body %}

<section class="animateur">
    <div class="d-flex justify-content-between align-items-center">
        <h2 class="ml-5 h2_animateur">Liste des fonctions pour les animateurs</h2>
        <a href="{{ path('animateurFonction_ajouter')}}" class="btn mt-5 mb-5 mr-5 add_icon d-flex align-items-center">Ajouter</a>
    </div>
    <table class="table table-striped">
        <thead>
            <tr class="background_animateur">
                <th scope="col" class="text-center">Nom de la fonction pour les animateurs</th>
                <th scope="col" class="text-center"><i class="fas fa-cogs"></i></th>

            </tr>
        </thead>
        <tbody>
            {% for animateurfonction in animateurfonctions %}
            <tr>
                <td class="text-center">{{ animateurfonction.nom }}</td>
                <td class="text-center">
                    <a href="{{  path('animateurFonction_afficher', {'id': animateurfonction.id}) }}"><i class="far fa-eye"></i></a>
                    <a href="{{  path('animateurFonction_modifier', {'id': animateurfonction.id}) }}"><i class="fas fa-pen"></i></a>
                    <a href="{{  path('animateurFonction_supprimer', {'id': animateurfonction.id}) }}"><i class="trash_color far fa-trash-alt"></i></a>
                </td>
            </tr>
                {% else %}
                <td class="text-center">Il n'y a aucune fonction</td>
                <td class="text-center">...</td>
            {% endfor %}
        </tbody>
    </table>

</section>
{% endblock %}