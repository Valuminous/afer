{% extends 'base.html.twig' %}

{% block title %}Préfecture{% endblock %}

{% block body %}

<a href="{{ path('prefecture_ajouter') }}" class="btn text-white ml-2 add_icon d-flex align-items-center">Ajouter</a>

    <table class="table">
        <thead>
            <tr>
                <th scope="col">Nom</th>
                <th scope="col">Adresse</th>
                <th scope="col">Code postal</th>
                <th scope="col">Commune</th>
                <th scope="col">Service</th>
                <th scope="col">Réglages</th>
            </tr>
        </thead>

        <tbody>
            {% for prefecture in prefectures %}
                <tr>
                    <td>{{ prefecture.nomPrefecture }}</td>
                    <td>{{ prefecture.numeroAdressePrefecture }} {{ prefecture.adressePrefecture }}</td>
                    <td>{{ prefecture.cpPrefecture }}</td>
                    <td>{{ prefecture.communePrefecture }}</td>
                    <td>{{ prefecture.prefectureService }}</td>
                    <td>
                        <a href="{{ path('prefecture_afficher', {'id': prefecture.id}) }}"><i class="fas fa-eye"></i></a>
                        <a href="{{ path('prefecture_modifier', {'id': prefecture.id}) }}"><i class="fas fa-pencil-alt"></i></a>
                        <a href="{{ path('prefecture_supprimer', {'id': prefecture.id}) }}"><i class="fas fa-trash-alt"></i></a>
                    </td>
                </tr>
            {% else %}
                <td class="text-center">Il n'y a aucune préfecture</td>
                <td class="text-center">...</td>
                <td class="text-center">...</td>
                <td class="text-center">...</td>
                <td class="text-center">...</td>
                <td class="text-center">...</td>
            {% endfor %}
        </tbody>
    </table>

{% endblock %}
