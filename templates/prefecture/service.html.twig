{% extends 'base.html.twig' %}

{% block body %}

<section class="prefecture">
    <div class="d-flex justify-content-between align-items-center">
        <h2 class="ml-5 h2_prefecture mt-5 mb-5">Liste des services pour les pr√©fectures</h2>
        {% if is_granted('ROLE_ADMIN') %}
            <a href="{{ path('prefectureService_ajouter') }}" class="btn mr-5 add_icon d-flex align-items-center">Ajouter</a>
        {% endif %}
    </div>

    <table class="table table-striped">
        <thead>
            <tr class="background_prefecture">
                <th scope="col" class="pl-5 text-left">Nom du service</th>
                {% if is_granted('ROLE_ADMIN') %}
                    <th scope="col" class="text-center"><i class="fas fa-cogs"></i></th>
                {% endif %}
            </tr>
        </thead>

        <tbody>
            {% for service in services %}
                <tr>
                    <td class="pl-5 text-left">{{ service.nom }}</td>
                    {% if is_granted('ROLE_ADMIN') %}
                        <td class="text-center">
                            <a href="{{ path('prefectureService_modifier', {'id': service.id}) }}"><i class="fas fa-pen pen_color"></i></a>
                            <a href="{{ path('prefectureService_supprimer', {'id': service.id}) }}"><i class="far fa-trash-alt trash_color pl-2"></i></a>
                        </td>
                    {% endif %}
                </tr>
            {% else %}
                <td class="pl-5 text-left">Il n'y a aucun service</td>
                <td class="text-center">...</td>
            {% endfor %}
        </tbody>
    </table>
</section>

{% endblock %}
