{% extends 'base.html.twig' %}

{% block body %}

<section class="prefecture">
    <div class="d-flex justify-content-between align-items-center">
        <h2 class="ml-5 h2_prefecture">Liste des services pour les pr√©fectures</h2>
        <a href="{{ path('prefectureService_ajouter') }}" class="btn mt-5 mb-5 mr-5 add_icon d-flex align-items-center">Ajouter</a>
    </div>

    <table class="table table-striped">
        <thead>
            <tr class="background_prefecture">
                <th scope="col" class="pl-5 text-left">Nom du service</th>
                <th scope="col" class="text-center pr-5"><i class="fas fa-cogs"></i></th>
            </tr>
        </thead>

        <tbody>
            {% for service in services %}
                <tr>
                    <td class="pl-5 text-left">{{ service.nom }}</td>
                    <td class="text-center">
                        <a data-toggle="tooltip" data-placement="top" title="Modifier le service" href="{{ path('prefectureService_modifier', {'id': service.id}) }}"><i class="ml-3 fas fa-pen pen_color"></i></a>
                        <a data-toggle="tooltip" data-placement="top" title="Supprimer le service" href="{{ path('prefectureService_supprimer', {'id': service.id}) }}"><i class="ml-3 far fa-trash-alt trash_color pr-5"></i></a>
                    </td>
                </tr>
            {% else %}
                <td class="pl-5 text-left">Il n'y a aucun service</td>
                <td class="text-center">...</td>
            {% endfor %}
        </tbody>
    </table>
</section>

{% endblock %}
