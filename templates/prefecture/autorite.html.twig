{% extends 'base.html.twig' %}

{% block title %}Préfecture{% endblock %}

{% block body %}

<a href="{{ path('prefectureAutorite_ajouter') }}" class="btn text-white ml-2 add_icon d-flex align-items-center">Ajouter</a>

    <table class="table">
        <thead>
            <tr>
                <th scope="col">Nom</th>
                <th scope="col">Réglages</th>
            </tr>
        </thead>

        <tbody>
            {% for autorite in autorites %}
                <tr>
                    <td>{{ autorite.nom }}</td>
                    <td>
                        <a href="{{ path('prefectureAutorite_modifier', {'id': autorite.id}) }}"><i class="fas fa-pencil-alt"></i></a>
                        <a href="{{ path('prefectureAutorite_supprimer', {'id': autorite.id}) }}"><i class="fas fa-trash-alt"></i></a>
                    </td>
                </tr>
            {% else %}
                <td class="text-center">Il n'y a aucune autorité</td>
                <td class="text-center">...</td>
            {% endfor %}
        </tbody>
    </table>

{% endblock %}
