{% extends 'base.html.twig' %}

{% block body %}

<section class="prefecture">
    <div class="d-flex justify-content-between align-items-center">
        <h2 class="ml-5 h2_animateur">Liste des autorités pour les préfectures</h2>
        <a href="{{ path('prefectureAutorite_ajouter') }}" class="btn btn-success mt-5 mb-5 mr-5">Ajouter une autorité</a>
    </div>

    <table class="table table-striped">
        <thead>
            <tr class="background_prefecture">
                <th scope="col" class="text-center">Nom</th>
                <th scope="col" class="text-center"><i class="fas fa-cogs"></i></th>
            </tr>
        </thead>

        <tbody>
            {% for autorite in autorites %}
                <tr>
                    <td class="text-center">{{ autorite.nom }}</td>
                    <td class="text-center">
                        <a href="{{ path('prefectureAutorite_modifier', {'id': autorite.id}) }}"><i class="fas fa-pencil-alt"></i></a>
                        <a href="{{ path('prefectureAutorite_supprimer', {'id': autorite.id}) }}"><i class="fas fa-trash-alt"></i></a>
                    </td>
                </tr>
            {% else %}
                <td class="text-center">Il n'y a aucune autorité</td>
                <td class="text-center">...</td>
            {% endfor %}
        </tbody>
    </table>
</section>

{% endblock %}
