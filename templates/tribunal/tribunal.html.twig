{% extends 'base.html.twig' %}

{% block body %}

<section class="tribunal">
<div class="d-flex justify-content-between align-items-center">
    <h2 class="ml-5 h2_tribunal">Liste des tribunaux</h2>
    <a href="{{ path('tribunal_ajouter')}}" class="btn mt-5 mb-5 mr-5 add_icon d-flex align-items-center">Ajouter</a>
</div>
     <table class="table table-striped">
        <thead>
            <tr class="background_tribunal">
                <th scope="col" class="text-center">Tribunal</th>
                <th scope="col" class="text-center">N° rue</th>
                <th scope="col" class="text-center">Adresse</th>
                <th scope="col" class="text-center">Commune</th>
                <th scope="col" class="text-center">Autorité</th>
                <th scope="col" class="text-center">Service</th>
                <th scope="col" class="text-center"><i class="fas fa-cogs"></i></th>
            </tr>
        </thead>
        <tbody>
            {% for tribunal in tribunals %}
            <tr>
                <td class="text-center">{{ tribunal.nomTribunal }}</td>
                <td class="text-center">{{ tribunal.numeroAdresseTribunal }}</td>
                <td class="text-center">{{ tribunal.adresseTribunal }}</td>
                <td class="text-center">{{ tribunal.communeTribunal }}</td>
                <td class="text-center">{{ tribunal.tribunalAutorite }}</td>
                <td class="text-center">{{ tribunal.tribunalService }}</td>
                <td class="text-center">
                    {# <a href="{{  path('tribunal_afficher', {'id': tribunal.id}) }}"><i class="far fa-eye"></i></a> #}
                    <a href="{{  path('tribunal_modifier', {'id': tribunal.id}) }}"><i class="fas fa-pen"></i></a>
                    <a href="{{  path('tribunal_supprimer', {'id': tribunal.id}) }}" ><i class="far fa-trash-alt trash_color"></i></a>
                </td>
            </tr>
                {% else %}
                <td class="text-center">Il n'y a aucun tribunal</td>
                <td class="text-center">...</td>
                <td class="text-center">...</td>
                <td class="text-center">...</td>
                <td class="text-center">...</td>
                <td class="text-center">...</td>
                <td class="text-center">...</td>
            {% endfor %}
        </tbody>
    </table>

</section>
{% endblock %}
