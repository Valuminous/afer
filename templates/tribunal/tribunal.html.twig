{% extends 'base.html.twig' %}

{% block title %}Liste des Tribunaux{% endblock %}

{% block body %}

    <h2>Liste des tribunaux</h2>
    {% for tribunal in tribunals %}
        <div>{{ tribunal.nomTribunal }}</div>
        <div>{{ tribunal.adresseTribunal }}</div>
        <div>{{ tribunal.numeroAdresseTribunal }}</div>
        <div>{{ tribunal.communeTribunal }}</div>
        <div>{{ tribunal.tribunalAutorite }}</div>
        <div>{{ tribunal.tribunalService }}</div>
        <div>
            <a href="{{path('tribunal_supprimer', {'id':tribunal.id})}}" class="btn btn-danger">Supprimer</a>
            <a href="{{path('tribunal_modifier', {'id':tribunal.id})}}" class="btn btn-primary">Modifier</a>
        </div>
    {% endfor %}
    
{% endblock %}
