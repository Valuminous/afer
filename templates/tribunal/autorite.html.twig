{% extends 'base.html.twig' %}

{% block body %}

<section class="tribunal">
<div class="d-flex justify-content-between align-items-center">
    <h2 class="ml-5 h2_tribunal">Liste des autorités pour les tribunaux</h2>
    <a href="{{ path('tribunalAutorite_ajouter')}}" class="btn mt-5 mb-5 mr-5 add_icon d-flex align-items-center">Ajouter</a>
</div>
     <table class="table table-striped">
        <thead>
            <tr class="background_tribunal">
                <th scope="col" class="text-center">Nom de l'autorité</th>
                <th scope="col" class="text-center"><i class="fas fa-cogs"></i></th>
            </tr>
        </thead>
        <tbody>
            {% for autorite in autorites %}
            <tr>
                <td class="text-center">{{ autorite.nom }}</td>
                <td class="text-center">
                    {# <a href="{{  path('tribunal_afficher', {'id': tribunal.id}) }}"><i class="far fa-eye"></i></a> #}
                    <a href="{{  path('tribunalAutorite_modifier', {'id': autorite.id}) }}"><i class="fas fa-pen"></i></a>
                    <a href="{{  path('tribunalAutorite_supprimer', {'id': autorite.id}) }}" ><i class="far fa-trash-alt"></i></a>
                </td>
            </tr>
            {% else %}
                <td class="text-center">Il n'y a aucune autorité</td>
                <td class="text-center">...</td>
            {% endfor %}
        </tbody>
    </table>

</section>
{% endblock %}
