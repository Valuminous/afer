{% extends 'base.html.twig' %}

{% block body %}

<section class="stage">
    <div class="d-flex justify-content-between align-items-center">
        <h2 class="ml-5 h2_stage">Liste des stages</h2>
        <a href="{{ path('stage_ajouter')}}" class="btn mt-5 mb-5 mr-5 add_icon d-flex align-items-center">Ajouter</a>
    </div>

    <table class="table table-striped">
        <thead>
            <tr class="background_stage">
                <th scope="col" class="text-center">NumÃ©ro de stage</th>
                <th scope="col" class="text-center">Date de dÃ©but</th>
                <th scope="col" class="text-center">Date de fin</th>
                <th scope="col" class="text-center">Lieu de stage</th>
                <th scope="col" class="text-center">Animateurs</th>
                <th scope="col" class="text-center"><i class="fas fa-cogs"></i></th>
            </tr>
        </thead>
        <tbody>
            {% for stage in stages %}
            <tr>
                <td class="text-center">{{ stage.numeroStage }}</td>
                <td class="text-center">
                    {{ stage.dated|date('j F Y') }}
                </td>
                <td class="text-center">
                    {{ stage.datef|date('j F Y') }}
                </td>
                <td class="text-center">
                    {% for lieuStage in stage.lieuStages %}
                    {{ lieuStage.nomEtablissement }}
                    {% endfor %}
                </td>
                <td class="text-center">
                    {% for animateur in stage.animateurs %}
                    {{ animateur.nomAnimateur }}
                    {% endfor %}
                </td>
                <td class="text-center">
                    <a href="{{  path('stage_afficher', {'id': stage.id}) }}"><i class="far fa-eye"></i></a>
                    <a href="{{  path('stage_modifier', {'id': stage.id}) }}"><i class="fas fa-pen"></i></a>
                    <a href="{{  path('stage_supprimer', {'id': stage.id}) }}"><i class="far fa-trash-alt"></i></a>
                </td>
            </tr>
            {% else %}
            <td class="text-center">Il n'y a aucun stage</td>
            <td class="text-center">...</td>
            <td class="text-center">...</td>
            <td class="text-center">...</td>
            <td class="text-center">...</td>
            {% endfor %}
        </tbody>
    </table>

</section>
{% endblock %}