<head>
    <style>
        table,
        th,
        td {
            border: 1px solid black;
            border-collapse: collapse;
        }

        th {
            padding: 5px;
            font-size: 14px;
            text-align: center;
            width: auto;
        }

        td {
            padding: 5px;
            font-size: 13px;
            text-align: left;
            width: auto;
        }

        table {
            margin-left: 10px;
            width: 90%;
        }

        img {
            height: 100px;
            border-collapse: collapse;
            padding-bottom: 20px;
        }

        h3 {
            font-size: 15px;
             text-align: center;
        }

        p {
            padding: 10px;
            text-align: left;
            font-size: 18px;
        }

        div {
            padding-top: 50px;
            float: right;
            padding-right:200px;
        }
    </style>
</head>
{% block body %}
<img src="./build/static/logo.png" alt="Logo AFER">
<div>FEUILLET D'ÉMARGEMENT DES STAGIAIRES</div>
<hr>


<h3>STAGE N° {{ stage.numeroStage }}</h3>


<p>Stage Du {{ stage.dated|localizeddate('full', 'none', 'fr')}} ET {{ stage.datef|localizeddate('full', 'none', 'fr')}}
</p>

 
<table class="table table-striped">
    <tbody>
        <tr>
            <th rowspan="2">Nom</th>
            <th rowspan="2">Prénom</th>
            <th rowspan="2">Cas</th>
            <th colspan="2">{{ stage.dated|localizeddate('short', 'none', 'fr')}}</th>
            <th colspan="2">{{ stage.datef|localizeddate('short', 'none', 'fr')}}</th>
        </tr>
        <tr>
            <th>Matin</th>
            <th>Après-midi</th>
            <th>Matin</th>
            <th>Après-midi</th>
        </tr>
        {% for participation in stage.participations %}
        <tr>
            
            <td>{{participation.stagiaire.nomStagiaire}}</td>
            <td>{{participation.stagiaire.prenomStagiaire}}</td> 
           {% if participation.cas is not null %}
            <td align="left">{{ participation.cas.numeroCas}} </td> 
           {% else %}
           <td>Aucun</td>
           {% endif %}
           <td></td>
           <td></td>
           <td></td>
           <td></td>
        </tr>
        {% endfor %}
    </tbody>
</table>

<table STYLE="padding-top: 20px">
<body>
    <tr>
    <th colspan="2">Signatures des animateurs</th>
     <th>Signature du responsable de la formation</th>
    </tr>
     {% for animateur in stage.animateurs %}
    <tr>
    <td>{{ animateur.prenomAnimateur }} {{ animateur.nomAnimateur }}</td>
    <td></td>
    <td style="border:0px"></td>
     </tr>
     {% endfor %}
</body>
</table>



{% endblock %}